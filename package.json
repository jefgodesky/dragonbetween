{
  "name": "dragonbetween",
  "version": "1.0.0",
  "type": "module",
  "description": "Server for the Dragon Between website [https://dragonbetween.net]",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all build serve",
    "test": "mocha --require ts-node/register",
    "lint": "ts-standard",
    "check": "npm-run-all lint test",
    "serve": "node dist/index.js",
    "build": "npm-run-all build:ts build:scss",
    "build:ts": "npx tsc",
    "build:scss": "node sass.mjs",
    "dev": "npm-run-all --parallel dev:build dev:serve",
    "dev:build": "npx tsc --watch",
    "dev:serve": "nodemon -q dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefgodesky/dragonbetween.git"
  },
  "author": {
    "name": "Jason Godesky",
    "email": "jason@dragonbetween.net"
  },
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/jefgodesky/dragonbetween/issues"
  },
  "homepage": "https://dragonbetween.net",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "pocketbase": "^0.9.0",
    "remark-parse": "^10.0.1",
    "sass": "^1.57.1",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.15",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "env-test": "^1.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.4"
  }
}
